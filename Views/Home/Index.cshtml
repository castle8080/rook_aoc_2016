@model rook_aoc_2016.Models.HomeViewModel

<div id="top-nav">
    <a href='https://adventofcode.com/2016' target="aoc_site">Advent of Code 2016</a>
    <a href='/results/latest_accepted'
        hx-get='/results/latest_accepted'
        hx-trigger='click'
        hx-target='#problem-div-container'
        hx-swap='innerHTML'
    >[Latest Results]</a>
</div>

<div id="problem-main">
    <div id="problem-choice-div">
        <ol>
            @foreach (var problem in Model.Problems.Problems) {
                <li>
                    <a href='/problem/@(problem.Day)'
                        hx-get='/problem/@(problem.Day)'
                        hx-trigger="click"
                        hx-target="#problem-div-container"
                        hx-swap="innerHTML"
                    >Day @(problem.Day)</a>
                </li>
            }
        </ol>
    </div>

    <div id="problem-div-container">
        Choose a day on the left to run a problem.
    </div>
</div>